#!/bin/bash
echo -e "
\e[1mDEVBOX-HILFE\e[0m

  \e[1mBenutzung\e[0m
    setup    -- Initiales Setup ausführen
    update   -- devbox-Image und Repository updaten
    pull     -- das neueste devbox-Image vom GitLab-Registry holen

    run      -- den devbox-Container im Vordergrund ausführen
    exec     -- Befehle im devbox-Container ausführen
    composer -- Composer im devbox-Container ausführen
    ssh-add  -- SSH-Schlüssel zum devbox-Container-eigenen ssh-agent hinzufügen
    help     -- Diesen Hilfetext anzeigen

  \e[1mWartung\e[0m
    build    -- ein neues devbox-Image bauen
    push     -- gebautes devbox-Image ins GitLab-Registry pushen
"
